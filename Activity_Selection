
#include <bits/stdc++.h>
using namespace std;

struct Activity
{
    float start, end;
};

void selection_sort(Activity arr[], int n)
{
    for (int i = 0; i < n; i++)
    {
        int min = i;
        for (int j = i + 1; j < n; j++)
        {
            if (arr[j].end <= arr[min].end)
            {
                min = j;
            }
            if (min != i)
            {
                swap(arr[i], arr[min]);
            }
        }
    }
}

int main()
{
    int n;
    printf("Enter the number of activity: ");
    cin >> n;
    Activity arr[n];
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i].start >> arr[i].end;
    }

    selection_sort(arr, n);

    int j = 0, count = 1;

    for (int i = 1; i < n; i++)
    {
        if (arr[i].start >= arr[j].end)
        {
            count++;
            j = i;
        }
    }
    cout << "Maximum selected activity: " << count << endl;
}
